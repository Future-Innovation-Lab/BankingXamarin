<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BankingXamarin.BankingPage">
        
    <StackLayout Orientation="Vertical">
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Banking Example" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        
        <Entry  x:Name="DepositAmountEntry" Placeholder="Deposit Amount" Keyboard="Numeric" />
        <Entry  x:Name="DepositReasonEntry" Placeholder="Deposit Reason" />
        <Button x:Name="DepositButton" Text="Deposit" Clicked="DepositButton_Clicked"/>

        <Entry  x:Name="WithdrawAmountEntry" Placeholder="Withdraw Amount" Keyboard="Numeric" />
        <Entry  x:Name="WithdrawReasonEntry" Placeholder="Withdraw Reason" />
        <Button x:Name="WithdrawButton" Text="Withdraw" Clicked="WithdrawButton_Clicked"/>

        <Button x:Name="DisplayTransactionsButton" Text="Display Transactions" Clicked="DisplayTransactionsButton_Clicked"/>
        <Label x:Name="DisplayTransactionsLabel"/>
    </StackLayout>

</ContentPage>
